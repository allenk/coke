#!/usr/bin/env node

var exit    = true;
var coke    = require( '../index' );
var cli     = require( '../lib/cli' );
var g       = cli.generators;
var args    = process.argv.slice( 2 );
var command = args.shift();

switch( command ){
  case '-v':
  case '--version':
    console.log( coke.version );

    break;

  case 'n':
  case 'new':
    g.execute( 'new', args );
    exit = false;

    break;

  case 'g':
  case 'generate':
    g.init( args );
    exit = false;

    break;

  case 'r':
  case 'routes':
    cli.routes( args );

    break;

  case 's':
  case 'server':
    cli.server();
    exit = false;

    break;

  case 'c':
  case 'console':
    cli.console();
    exit = false;

    break;

  case 'b':
  case 'build':
    cli.build();
    exit = false;

    break;

  case 'm':
  case 'migrate':
    cli.migrate( args );
    exit = false;

    break;

  case 'h':
  case 'help':
  case '-h':
  case '--help':
  default:
    cli.help( g.list());

    break;
}



exit && process.exit( 0 );